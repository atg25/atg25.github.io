# App
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-a-long-random-string

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database
# Use pooled URL for runtime queries (Supabase pooler URL is recommended)
DATABASE_URL=postgresql://username:password@host:6543/postgres?pgbouncer=true&connection_limit=1&sslmode=require

# Use direct URL for Prisma migrations (Supabase direct URL)
DIRECT_URL=postgresql://username:password@host:5432/postgres?sslmode=require

# Optional: when true, fail the build if migrations/post-sync fail
STRICT_DB_BUILD=false
